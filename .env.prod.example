# Configuration Production - Variables d'environnement
# Copiez ce fichier vers .env.prod pour l'utilisation en production

# Base de données PostgreSQL
POSTGRES_DB=church_db_prod
POSTGRES_USER=church_user_prod
POSTGRES_PASSWORD=your-super-secure-password-here
DATABASE_URL=postgresql://church_user_prod:your-super-secure-password-here@postgres:5432/church_db_prod?schema=public

# Cache Redis
REDIS_URL=redis://:your-redis-password@redis:6379
REDIS_PASSWORD=your-redis-password

# JWT - CHANGEZ EN PRODUCTION !
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Email SMTP - Configurez avec vos vrais identifiants
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Application
APP_NAME=Système de Gestion d'Église
APP_URL=https://votre-domaine.com
NODE_ENV=production
USE_POSTGRES=true

# Super Admin - CHANGEZ EN PRODUCTION !
SUPER_ADMIN_EMAIL=admin@votre-domaine.com
SUPER_ADMIN_USERNAME=Administrateur
SUPER_ADMIN_PASSWORD=ChangeThisPassword123!
SUPER_ADMIN_PSEUDO=admin
SUPER_ADMIN_PHONE=0123456789

# Église temporaire
TEMP_CHURCH_NAME=Église Principale
TEMP_CHURCH_ADDRESS=Adresse de votre église
TEMP_CHURCH_CITY=Votre ville
