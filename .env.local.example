# ========================================
# Configuration Développement Local
# ========================================
# Copiez ce fichier vers .env pour l'utilisation locale

# Base de données PostgreSQL (Docker local)
POSTGRES_DB=church_db_dev
POSTGRES_USER=church_user_dev
POSTGRES_PASSWORD=dev_password_123
DATABASE_URL=postgresql://church_user_dev:dev_password_123@postgres:5432/church_db_dev

# Cache Redis (Docker local)
REDIS_URL=redis://:redis_dev_password@redis:6379
REDIS_PASSWORD=redis_dev_password

# JWT - Clé de développement
JWT_SECRET=dev_jwt_secret_key_change_in_production_minimum_32_chars

# Email SMTP - Gmail (utilisez un mot de passe d'application)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=votre.email@gmail.com
SMTP_PASS=votre_mot_de_passe_application_gmail
EMAIL_USER=votre.email@gmail.com
EMAIL_PASSWORD=votre_mot_de_passe_application_gmail

# Application (URLs locales)
APP_NAME=Système de Gestion d'Église
FRONTEND_URL=http://localhost:3000
APP_BACKEND_URL=http://localhost:5001
NODE_ENV=development
USE_POSTGRES=true

# Super Admin par défaut (développement)
SUPER_ADMIN_EMAIL=admin@example.com
SUPER_ADMIN_USERNAME=Super Admin
SUPER_ADMIN_PASSWORD=SuperAdmin2024
SUPER_ADMIN_PSEUDO=admin99
SUPER_ADMIN_PHONE=0123456789

# Église temporaire
TEMP_CHURCH_NAME=Église de Développement
TEMP_CHURCH_ADDRESS=123 Rue Example
TEMP_CHURCH_CITY=Paris
TEMP_CHURCH_COUNTRY=France

# Ports (Docker local)
BACKEND_PORT=5001
FRONTEND_PORT=3000
POSTGRES_PORT=5432
REDIS_PORT=6379
ADMINER_PORT=8080
CADVISOR_PORT=8081
